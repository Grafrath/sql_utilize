create table product (
	id int primary key,
	name varchar(50),
	category varchar(50),
	price int,
	stock int
);

INSERT INTO employees.product (id,name,category,price,stock) values
	 (1,'노트북','전자제품',1200000,5),
	 (2,'키보드','전자제품',45000,20),
