	 (9,'커피머신','전자제품',350000,3),
	 (10,'캠핑의자','레저',27000,40);


select name, category, price from product
order by category, price desc;

select p.name, p.price, o.quantity, (p.price * o.quantity) as total_price from product p
join order_list o on o.product_id = p.id;

select * from employee;