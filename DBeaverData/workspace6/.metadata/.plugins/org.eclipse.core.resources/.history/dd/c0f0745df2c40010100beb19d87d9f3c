select name, category, price from product
order by category, price desc;

select p.name, p.price, o.quantity, (p.price * o.quantity) as total_price from product p
join order_list o on o.product_id = p.id;

select * from employee; 

drop table enroll;
drop table student;

CREATE TABLE student (
  id      INT PRIMARY KEY,
  name    VARCHAR(20),
  class   INT,
  age     INT,
  score   INT,
  reg_dt  DATE
);

INSERT INTO student (id, name, class, age, score, reg_dt) VALUES
(1, '김철수', 1, 18, 85, '2025-01-01'),
(2, '이영희', 2, 19, 90, '2025-01-03'),
(3, '박민수', 1, 18, 75, '2025-01-02'),
(4, '최지우', 2, 20, NULL, '2025-01-04'),
(5, '정현우', 1, 21, 95, '2025-01-05');

select * from student order by age;

select name, score from student order by score desc;

select name, score from student where score is not null order by score desc limit 3;

select * from student order by reg_dt desc;

select name, coalesce(score, 0) as score from student order by score;

drop table sales;

CREATE TABLE sales (
  id INT PRIMARY KEY,
  employee VARCHAR(20),
  amount INT,
  sale_date DATE
);

